<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kvargasS5B.Views.Principal"
             Title="Principal">
    <VerticalStackLayout Padding="20"
                         Spacing="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button x:Name="btnNuevo"
                    Text="Nuevo"
                BackgroundColor="Orange"
                    Clicked="btnNuevo_Clicked"/>

        <Entry x:Name="txtName"
               Placeholder="Ingrese el nombre"/>
        <Entry x:Name="txtId"
               IsVisible="Hidden"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnAdd"
                    Text="Agregar Persona"
                    BackgroundColor="Blue"
                    Clicked="btnAdd_Clicked"
                    Grid.Row="0"
                    Grid.Column="0"/>
            <Label x:Name="lblStatus"
                   TextColor="red"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <Button x:Name="btnMostrar"
                    Text="Listar Personas"
                    Clicked="btnMostrar_Clicked"
                    Grid.Row="2"
                    Grid.Column="0"/>
            <CollectionView x:Name="listaPersonas"
                            SelectionMode="Single"
                            SelectionChanged="listaPersonas_SelectionChanged"
                            Grid.Row="3"
                            Grid.Column="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Id}"
                                   Grid.Column="0"/>
                            <Label Text="{Binding Name}"
                                   Grid.Column="1"/>
                            <!-- Icono de selecciÃ³n -->
                            <Image Source="edit_icon.png" 
                                   HeightRequest="20" 
                                   WidthRequest="20" 
                                   HorizontalOptions="EndAndExpand" 
                                   VerticalOptions="Center"
                                   Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>